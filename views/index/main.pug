extends ../shared/layout.pug

block content
  include ../shared/nav.pug
  
  for person in user
    .container
      .row
        for person in user
          .col-md-3.col-sm-6.user
            .usercontent
              .row.text-center.languages
                .col-sm-12
                  .row
                    .col-sm-4
                      p JavaScript
                    .col-sm-4
                      p Python
                    .col-sm-4
                      p Java
                  .row
                    .col-sm-4
                      p
                    .col-sm-4
                      p
                    .col-sm-4
                      p
              hr
              .row.info
                .col-sm-12
                  .row.text-center
                    .col-sm-4
                      p Gist
                      h3  #{person.public_gists}
                    .col-sm-4
                      p Repositories
                      h3 #{person.public_repos}
                    .col-sm-4
                      p Contributions
                      h3 220
                  .row.text-center.info1
                    .col-sm-4
                      p Followers
                      h3  #{person.followers}
                    .col-sm-4
                      p Following
                      h3 #{person.following}
                  .row
                    .col-sm-12
                      p
                        a(href=person.blog) #{person.blog}
                      p
                        a(href='mailto:'+person.email)  #{person.email}
              hr
              .row
                .col-sm-5
                  img(src=person.avatar_url, width='100px')
                .col-sm-7
                  h3
                    a(href='http://www.github.com/'+person.login) #{person.login}
                  p  #{person.name}
                  .company
                    if person.company
                      p #{person.company}
                    else
                      p  No Company
                    p
                      |  Wellington, New Zealand
